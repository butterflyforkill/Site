@model IndexViewModel



@{

    var base_path = Context.Request.PathBase;
}


<div class="indexcontainer rounded">
    <div class="m-3 p-3 " style="background-color: #a9bbc1;
        /*box-shadow: 0 0 5px 0 black;*/">

        @foreach (var post in Model.Posts)
        {

            var image_path = $"{base_path}/Image/{post.Image}";
            <a class="post m-3 p-3 rounded " asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">


                <img class="rounded" src="@image_path" />

                <span class="title">
                    @post.Title
                </span>

            </a>

        }
    </div>


