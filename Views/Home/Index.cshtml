    <div class="pages rounded">
        @if (Model.PageNumber > 1)
        {

            <a class="rounded" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-pageNumber="@(Model.PageNumber - 1)">Попередня</a>
        }

        @for (int i = 1; i <= Model.PageCount; i++)
        {


            <a class="@(i == Model.PageNumber ? "active" : "") rounded" asp-action="Index" asp-controller="Home"
               asp-route-category="@Model.Category"
               asp-route-pageNumber="@i">@i</a>

        }

        @if (Model.NextPage)
        {
            <a class="rounded" asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-pageNumber="@(Model.PageNumber + 1)">Наступна</a>
        }
    </div>

    </div>




